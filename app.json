{
  "name": "memefab",
  "description": "Fabricate Fabulous Memes",
  "addons": [
    "heroku-postgresql",
    "heroku-redis",
    "cloudinary"
  ],
  "buildpacks": [
    { "url": "heroku/nodejs" },
    { "url": "heroku/ruby" }
  ],
  "scripts": {
    "postdeploy": "bin/rails db:migrate"
  },
  "env": {
    "SECRET_KEY_BASE": {
      "generator": "secret"
    }
  },
  "environments": {
    "test": {
      "buildpacks": [
        { "url": "heroku/ruby" }
      ],
      "scripts": {
        "test": "bin/rails test"
      }
    }
  }
}
